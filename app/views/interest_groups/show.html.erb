<div class="container">

	<h2><%= @igroup.name %></h2>
	
	<% @igroup.markers.each do |m| %>
	<ul style="list-style:none;">
		<li>Title: <b><%= link_to m.title, interest_group_marker_path(m.interest_group.id, m.id) %></b></li>
		<li>Description: <%= m.description %></li>
		<li>Address: <%= m.address %>, Latitude: <%= m.latitude %>, Longitdue: <%= m.longitude %></li>				
	</ul>
	<% end %>

	<div>
		<%= link_to "Back to markers page", root_path, class: "btn btn-primary btn-lg" %>
	</div>
	
</div>
