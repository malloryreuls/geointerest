

<div class="marker-container", style="background-image:url('<%=@igroup.avatar.url%>');">
	<h2 class="ig-title"><%= @igroup.name.titleize %></h2>
	</div>

	<h3 style="float: right;">followers: <%= @igroup.users.count %></h3>

	<div>
		<% if @igroup.user_id.to_i == current_user.id.to_i %>
			<%= link_to "Create a new marker", new_interest_group_marker_path(@igroup), class: "btn btn-primary btn-md" %>
			<%= link_to 'Edit', edit_interest_group_path(@igroup), class: "btn btn-primary btn-md" %>
		<% end %>
	</div>
	
	<% @igroup.markers.each do |m| %>
	<ul style="list-style:none;">

		<h3>
		<%= link_to m.title, interest_group_marker_path(m.interest_group.id, m.id)%>
		</h3>
		<%= image_tag m.avatar.url, class: "marker-sm"%>

		<li>
		<% if @igroup.user_id.to_i == current_user.id.to_i %>
			<%= link_to "Edit", edit_interest_group_marker_path(@igroup, m)%>
			<%= link_to " - Delete", [@igroup, m], method: :delete, data:{confirm:"Are you sure you want to delete this marker?"}%>
		<% end %>
		</li>
		
		<li>Message: <%= m.description %></li>
		<li>Address: <%= m.address %></li>				
	</ul>
		
	<% end %>

	
	<div>
		<%= link_to "Back to markers page", listviews_path, class: "btn btn-primary btn-md" %>
	</div>
	

