<body id="discover">
<div class="container">
  <h1 style="color: white; display: inline-block;">Discover Interest Groups</h1>
  <div style="float: right; display: inline-block;"><%= link_to "Create New Interest Group", new_interest_group_path, class: "btn btn-primary btn-lg" %></div>
  
  <div class="row">
    <% @igroups.each do |i| %>
    <div class="col-xs-4">
      <div><%= image_tag i.avatar.url, style: "background: cover; width: 200px; height: 200px; border: 3px solid black; border-radius: 32px; text-align: center;" %></div>
      <h4><%= link_to i.name.titleize, interest_group_path(i) %></h4>
      <% @users.each do |u| %> 
        <% if u.id.to_i == i.user_id.to_i %>
        <h5><%= link_to u.username, user_path(u), style: "color: white;" %></h5>
        <% else %>
        <p></p>
        <% end %>
      <% end %> 
      <%= form_for @uigroups do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :interest_group_id, value: i.id %>

        <% if i.user_interest_groups.map(&:user_id).include? current_user.id %>
        <%= link_to "âˆš Following", user_interest_group_path(i.user_interest_groups.where(:user_id => current_user.id).first.id), method: :delete, class: "btn btn-success btn-md" %>          
        <% else %>
        <%= f.submit "+ Follow", class: "btn btn-primary btn-md" %>
        <% end %>

        <% if i.user_id.to_i == current_user.id.to_i %>
        <%= link_to "Delete", [i], method: :delete, data: {confirm: "Are you sure you want to delete this interest group?"}, class: "btn btn-warning btn-md" %>
        <% end %>

      <% end %> <!-- closes uigroup loop -->
    </div>
    <% end %> <!-- closes igroup loop -->
  </div>
</div>
</body>