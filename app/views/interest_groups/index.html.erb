<body id="discover">
<div class="container">
  <div class="row">
  <h2 style="color: white; display: inline-block; margin-left: 3%">Discover Interest Groups</h2>
  <div style="float: right; display: inline-block; margin-top: 2%; margin-bottom: 2%;"><%= link_to "Create New Interest Group", new_interest_group_path, class: "btn btn-primary btn-md" %></div>
</div>
  
  <div class="row">
    <% @igroups.each do |i| %>
    <div class="col-xs-12 col-sm-4 igroup">
      <div class="innerbox">
      <div>
        <%= image_tag i.avatar.url, style: "background: cover; width: 160px; height: 160px; border: 3px solid black; border-radius: 50%; text-align: center;" %>
      </div>
      <h4><%= link_to i.name.titleize, interest_group_path(i) %></h4>
      <% @users.each do |u| %> 
        <% if u.id.to_i == i.user_id.to_i %>
        <h5><%= link_to u.username, user_path(u), style: "color: white;" %></h5>
        <% else %>
        <p></p>
        <% end %>
      <% end %> 
    <div style="color: white; display: inline-block;">Followers: <%=i.users.count %></div>
    <div style="display: inline-block;">
      <%= form_for @uigroups do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :interest_group_id, value: i.id %>

        <% if i.user_interest_groups.map(&:user_id).include? current_user.id %>
        <%= link_to "âˆš Following", user_interest_group_path(i.user_interest_groups.where(:user_id => current_user.id).first.id), method: :delete, class: "btn btn-success btn-md" %>          
        <% else %>
        <%= f.submit "+ Follow", class: "btn btn-primary btn-md" %>
        <% end %>

        <% if i.user_id.to_i == current_user.id.to_i %>
        <%= link_to "Delete", [i], method: :delete, data: {confirm: "Are you sure you want to delete this interest group?"}, class: "btn btn-warning btn-md" %>
        <% end %>

      <% end %> <!-- closes uigroup loop -->
    </div>  <!-- closes inline-block -->
    </div>  <!-- closes innerbox -->
    </div>
    <% end %> <!-- closes igroup loop -->
  </div>  <!-- closes row -->
</div>
</body>