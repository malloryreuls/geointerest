			<div class="markershow">
				<h1><%= @marker.title %></h1>

				<div><%= image_tag @marker.avatar.url, style: "background: cover; width: 250px; border-radius: 3%; text-align: center; box-shadow: 0px 0px 5px 2px #6B6C6C; margin: 1%;"%></div>
				<br />
				<div>
					<% if @igroup.user_id.to_i == current_user.id.to_i %>
					<%= link_to "Edit", edit_interest_group_marker_path(@igroup, @marker)%>
					<%= link_to " - Delete", [@igroup, @marker], method: :delete, data:{confirm:"Are you sure you want to delete this marker?"}%>
					<% end %>
				</div>

				<div><b><%= @marker.title %></b></div>
				<div><b>Description:</b> <%= @marker.description %></div>
				<div>Address: <%= @marker.address %></div>				
			</div>
		</div>


	</div>
</br>
