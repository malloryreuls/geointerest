<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'pin.png' %>
  <title>Geointerest</title>
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
  <nav style="background: #5E5F5F; opacity: 0.92;"class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" style="color: white;" href="/">GeoInterest</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right" style="text-align: center;">
        <% if current_user %>
        <li><%= link_to "Interest Groups", interest_groups_path, style:'color: white;' %></li>
        <li><%= link_to "Map", mapviews_path, style:'color: white;'  %></li>
        <li ><%= link_to "List", listviews_path, style:'color: white;'  %></li>    
         <li class="navbar-text"><span style="color: white;">Hello, <%= link_to current_user.username, user_path(current_user), class:'navbar-link', style:'color: white; font-weight: bold;'  %></span></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete, style:'color: white;'  %></li>
          <% else %>
           <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Sign In", new_user_session_path %></li>
        <% end %> 
      </ul> 
    </div>
  </div>
</nav>
 <% end %> 
<div class="container-fluid">
  <% flash.each do |key, value| %>
    <div class="alert alert-warning alert-dismissable notice alert alert-<%= key %>"><%= value %>
    </div>
</div>
  <% end %>

<%= yield %>

</body>
</html>
