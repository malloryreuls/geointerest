<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'pin.png' %>
  <title>Geointerest</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><b>GeoInterest</b></a>
      <a class="navbar-brand" href= "/interest_groups" >Interest Groups</a>
      
    </div>


    <div class="btn-group nav navbar-nav navbar-middle">
        <%= link_to "List", root_path, class: "btn btn-primary" %>
        <%= link_to "Map", mapviews_index_path, class: "btn btn-primary" %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if !current_user %>     
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Sign In", new_user_session_path %></li>
        	<% else %>
          <li class="navbar-text navbar-right"><span>Hello, <%= link_to current_user.email, edit_user_registration_path %></span></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
        <% end %> 
      </ul> 
    </div>
  </div>
</nav>
<div class="container-fluid">
  <% flash.each do |key, value| %>
    <div class="notice alert alert-<%= key %>"><%= value %></div>
  <% end %>

<%= yield %>

</body>
</html>
