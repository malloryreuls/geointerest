<div class="container">
<div class="page-header" style="display: inline-block; width: 100%; background-image: url('http://i.imgur.com/UMWttDB.jpg'); padding: 20px; box-shadow: 0px 0px 5px 2px #6B6C6C;">
  <h2 style="width: 50%; float: left; color: white;"><%= @user.username.capitalize %>'s Profile</h2>
  <div style="width: 50%; float: right; text-align: right;">
  <%= image_tag @user.avatar.url(:large	), style:'width: auto; height: 150px; border-radius: 6%;'%>
  <small><h5><% if current_user.id == @user.id %>
  <%= link_to "Edit User", edit_user_registration_path(@user), class: 'btn btn-default btn-sm' %>
  <% end %></h5></small>
</div>

<div style="clear: left;"></div>

<div class="numfollow" style="margin: 1%;">
  <p style="font-size: 12pt; font-weight: bold; color: white;">Following: <%= @user.interest_groups.count %></p>
  <p style="font-size: 12pt; font-weight: bold; color: white;"><%= @myigroups %> Interest Groups </p>
</div>
</div>

<div style="text-align: center; margin: 5px 0 20px 0;"><%= link_to "Create New Interest Group", new_interest_group_path, class: 'btn btn-primary btn-lg' %></div>

<div class="jumbotron">
  <h4>My Interest Groups:</h4>
	<% @igroups.each do |ig| %>
		<% if @user.id.to_i == ig.user_id.to_i %>
			<h5><%= link_to ig.name.titleize, interest_group_path(ig) %></h5>
			<%= link_to "Add", new_interest_group_marker_path(ig), class: 'btn btn-info btn-sm' %>
			<%= link_to 'Edit', edit_interest_group_path(ig), class: 'btn btn-warning btn-sm' %> 
			<%= link_to "Delete", ig, method: :delete, data: {confirm: "Are you sure you want to delete this interest group?"}, class: 'btn btn-danger btn-sm'%>
		<% end %>		
	<% end %>	
</div>
<div class="jumbotron">
  <h4>Interest Groups I Follow:</h4>
	<% @user.interest_groups.each do |i| %>
		<h5><%= link_to i.name.titleize, interest_group_path(i) %></h5> 
	<% end %>
</div>

</div>

<footer>
<nav style="background: #5E5F5F; padding:0px"class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container-fluid">

    <div class="navbar-center">

  <button class = "navbar-toggle mobileButt"><%= link_to "", user_path(current_user.id.to_i), class: "glyphicon glyphicon-user"%></button>
  
  <button class = "navbar-toggle mobileButt" style="width:50% !important;"><%= link_to "", mapviews_path, class: "glyphicon glyphicon-globe"%></button>   
  <button class = "navbar-toggle mobileButt"><%= link_to "", interest_groups_path, class: "glyphicon glyphicon-th-list"%></button>  



    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

   
      <ul class="nav navbar-nav navbar-center" style="text-align: center;">
        
      
        <%= link_to "Â© MMW", "https://github.com/malloryreuls/geointerest", class: "btn btn-lg", style:'color: white;' %>
        

      </ul> 
    </div>
  </div>
</nav>
</footer>